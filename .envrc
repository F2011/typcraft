# Automatically enter the Nix development environment
# Requires direnv and nix-direnv for best experience

if has nix; then
  # Use nix-direnv if available (faster, cached)
  if has nix_direnv_version; then
    nix_direnv_version 3.0.0
    use flake
  else
    # Fallback to basic flake support
    use flake
  fi
fi

# Project-specific environment variables
export ARTIIST_LOG="${ARTIIST_LOG:-info}"

# Add local bin to PATH (for development scripts)
PATH_add scripts

